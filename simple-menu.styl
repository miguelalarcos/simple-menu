.menu
  background-color rgb(135, 191, 114)

  position fixed
  top 0
  left 0

  overflow hidden
  white-space nowrap

  transition width .5s ease-in-out
  -moz-transition width .5s ease-in-out
  -webkit-transition width .5s ease-in-out
  width 0%
  border 2px solid black

.menu.active
  width 20%
//border 2px solid black

.menu.is-phone.active
  width 100%
//border 2px solid black

.menu div, .menu h2
  border-bottom 2px solid white
  font-weight normal
  cursor pointer

.close
  cursor pointer

.nano
  height 100px //100vh
.nano > .nano-content
  padding 10px
.nano > .nano-pane
  background #888
.nano > .nano-pane > .nano-slider
  background #111

.menu i
  cursor pointer